    <!-- Add these styles to your styles.xml file -->

    <!-- Base button style -->
    <style name="Theme.Calculator.Button" parent="Theme.Calculator">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/btn_number_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="fillerView" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Function buttons (AC, +/-, %) -->
    <style name="Theme.Calculator.Button.Function" parent="Theme.Calculator.Button">
        <item name="android:background">@drawable/btn_function_bg</item>
        <item name="android:textColor">@color/function_text_color</item>
    </style>

    <!-- Operator buttons (+, -, ร, รท, =) -->
    <style name="Theme.Calculator.Button.Operator" parent="Theme.Calculator.Button">
        <item name="android:background">@drawable/btn_operator_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Zero button (wider) -->
    <style name="Theme.Calculator.Button.Zero" parent="Theme.Calculator.Button">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">28dp</item>
    </style>


</resources>