<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/operator_button_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#717171</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="backgroundColor">@color/black</item>
        <item name="android:windowBackground">?backgroundColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?backgroundColor</item>
        <item name="android:windowLightStatusBar" >false</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
        <!-- Customize your theme here. -->
    </style>
</resources>